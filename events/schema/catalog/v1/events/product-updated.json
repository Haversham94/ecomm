{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "product-updated",
  "type": "object",
  "title": "Product Updated Event",
  "required": ["metadata", "data"],
  "properties": {
    "metadata": {
      "allOf": [
        {
          "$ref": "/common/v1/metadata.json"
        }
      ]
    },
    "data": {
      "type": "object",
      "required": ["id", "title", "price", "images"],
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "images": {
          "type": "array",
          "items": {
            "raw": "string",
            "thumb": "string"
          }
        }
      }
    }
  }
}
